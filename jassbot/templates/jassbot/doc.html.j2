{% extends "jassbot/index.html.j2" %}
{% block title %}Doc - {{ entity }}{% endblock %}
{% block main %}
    <h1>{{ entity }}</h1>
    <dl>
        {% if parameters %}
            <dt>Parameters</dt>
            <dd>
                <table class="table">
                    {% for parameter in parameters %}
                        <tr>
                            <td>{{ parameter['name'] }}</td>
                            <td>
                                <code>{{ parameter['type'] }}</code>
                            </td>
                            <td>{{ parameter['html'] }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </dd>
        {% endif %}
        {% for annotation in annotations %}
            <dt>{{ annotation['name'] }}</dt>
            <dd>
                {{ annotation['html'] }}
            </dd>
        {% endfor %}
        {% if kind == "type" %}
            <dt>Search for</dt>
            <dd>
                <ul>
                    <li><a href="{{ url_for('.search', query="takes "+entity ) }}">stuff taking {{entity}}</a></li>
                    <li><a href="{{ url_for('.search', query="returns "+entity ) }}">stuff returning {{entity}}</a></li>
                    <li><a href="{{ url_for('.search', query="extends "+entity ) }}">stuff extending {{entity}}</a></li>
                </ul>
            </dd>
        {% endif %}
    </dl>
{% endblock %}
